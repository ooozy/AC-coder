class Solution:
    def threeSumClosest(self, nums: List[int], target: int) -> int:
        nums.sort()
        lens = len(nums)-2
        ans = nums[0]+nums[1]+nums[2]
        for i in range(lens):
            left = i+1
            right = lens+1    
            while left<right:
                s = nums[i]+nums[left]+nums[right]
                if s==target:
                    return target
                elif s>target:
                    right -= 1
                    if abs(ans-target)>abs(s-target):
                        ans = s
                    s = nums[i]+nums[left]+nums[right]
                else:
                    left += 1
                    if abs(ans-target)>abs(s-target):
                        ans = s
                    s = nums[i]+nums[left]+nums[right]
        return ans
